[flake8]
# Ignore these error codes project-wide
[flake8]
# Ignore these error codes project-wide
ignore = 
    E501,  # line too long
    F401,  # imported but unused
    E302,  # expected 2 blank lines
    E305,  # expected 2 blank lines after class or function
    E131,  # continuation line unaligned
    E402,  # module level import not at top
    E722,  # do not use bare except
    E272,  # multiple spaces before keyword
    W292,  # no newline at end of file
    F541,  # f-string missing placeholders
    F811,  # redefinition of unused name
    E221,  # multiple spaces before operator
    E241,  # multiple spaces after ','
    W293,  # blank line contains whitespace
    W391,  # blank line at end of file
    E231   # missing whitespace after ','


# Allow slightly longer lines
max-line-length = 100

# Exclude virtualenv, Git metadata, and your data files
exclude =
    venv/,
    .git/,
    discord_messages.json,
    discord-messages-extract.json,
    discord_messages_v2.json,
    discord_messages.db
