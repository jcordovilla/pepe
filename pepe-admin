#!/usr/bin/env python3
"""
Pepe Admin CLI - Unified Administrative Interface

Replaces 20+ scattered scripts with a single, clean interface for all
administrative operations of the Discord bot agentic system.

Usage:
    pepe-admin setup          # Initial system setup
    pepe-admin sync           # Sync Discord data  
    pepe-admin status         # System health check
    pepe-admin maintain       # System maintenance
    pepe-admin backup         # Create system backup
    pepe-admin monitor        # Performance monitoring
    pepe-admin stats          # Vector store statistics
    pepe-admin migrate        # Resource migration
    pepe-admin optimize       # Performance optimization
    pepe-admin test           # System testing

Poetry Usage:
    poetry run ./pepe-admin <command>  # Run with Poetry environment
    
Or activate Poetry shell first:
    poetry shell
    ./pepe-admin <command>
"""

import sys
import os
import asyncio
import argparse
import logging
from pathlib import Path
from datetime import datetime
from typing import Dict, Any, Optional

# Add project root to path
project_root = Path(__file__).parent
sys.path.insert(0, str(project_root))

# Configure logging
logging.basicConfig(
    level=logging.INFO,
    format='%(asctime)s - %(levelname)s - %(message)s'
)
logger = logging.getLogger(__name__)

class PepeAdmin:
    """Unified administrative interface for the Discord bot system"""
    
    def __init__(self):
        self.project_root = Path(__file__).parent
        self.config = self._load_config()
        
    def _load_config(self) -> Dict[str, Any]:
        """Load system configuration"""
        from dotenv import load_dotenv
        load_dotenv()
        
        return {
            'vector_store': {
                'persist_directory': './data/chromadb',
                'collection_name': 'discord_messages',
                'embedding_model': 'text-embedding-3-small'
            },
            'discord': {
                'token': os.getenv('DISCORD_TOKEN'),
                'guild_id': os.getenv('GUILD_ID')
            },
            'paths': {
                'data_dir': self.project_root / 'data',
                'logs_dir': self.project_root / 'logs',
                'backup_dir': self.project_root / 'backups'
            }
        }

    async def setup(self, args):
        """ðŸš€ Initial system setup and initialization"""
        print("ðŸš€ Pepe Admin - System Setup")
        print("=" * 50)
        
        # Step 1: Create required directories
        print("ðŸ“ Creating required directories...")
        directories = [
            'data/chromadb',
            'data/fetched_messages', 
            'data/processing_markers',
            'data/cache',
            'logs',
            'backups'
        ]
        
        for directory in directories:
            dir_path = self.project_root / directory
            dir_path.mkdir(parents=True, exist_ok=True)
            print(f"   âœ… {directory}")
        
        # Step 2: Initialize vector store
        print("\nðŸ” Initializing vector store...")
        try:
            from agentic.vectorstore.persistent_store import PersistentVectorStore
            vector_store = PersistentVectorStore(self.config['vector_store'])
            print("   âœ… Vector store initialized")
        except Exception as e:
            print(f"   âŒ Vector store error: {e}")
            return False
        
        # Step 3: Initialize databases
        print("\nðŸ—„ï¸ Initializing databases...")
        try:
            from agentic.memory.conversation_memory import ConversationMemory
            memory = ConversationMemory({'db_path': 'data/conversation_memory.db'})
            print("   âœ… Conversation memory initialized")
            
            from agentic.analytics.query_answer_repository import QueryAnswerRepository
            analytics = QueryAnswerRepository({'db_path': 'data/analytics.db'})
            print("   âœ… Analytics database initialized")
        except Exception as e:
            print(f"   âŒ Database error: {e}")
            return False
        
        # Step 4: Validate configuration
        print("\nâš™ï¸ Validating configuration...")
        if not self.config['discord']['token']:
            print("   âŒ DISCORD_TOKEN not set in environment")
            return False
        if not self.config['discord']['guild_id']:
            print("   âŒ GUILD_ID not set in environment")
            return False
        
        print("   âœ… Configuration valid")
        
        print("\nðŸŽ‰ Setup completed successfully!")
        print("ðŸ’¡ Next step: pepe-admin sync --initial")
        return True
    
    async def sync(self, args):
        """ðŸ”„ Sync Discord data into the system"""
        print("ðŸ”„ Pepe Admin - Data Sync")
        print("=" * 50)
        
        try:
            # Initialize system components
            from agentic.interfaces.agent_api import AgentAPI
            agent_api = AgentAPI(self.config)
            
            if hasattr(args, 'initial') and args.initial:
                print("ðŸ“¥ Performing initial data sync...")
                # Load existing JSON files if any
                data_dir = self.project_root / 'data' / 'fetched_messages'
                if data_dir.exists():
                    json_files = list(data_dir.glob('*.json'))
                    print(f"   Found {len(json_files)} message files")
                    
                    for json_file in json_files:
                        print(f"   Processing: {json_file.name}")
                        try:
                            import json
                            with open(json_file, 'r') as f:
                                messages = json.load(f)
                            
                            # Add to vector store
                            if messages:
                                await agent_api.add_documents(messages, source="discord_sync")
                                print(f"   âœ… Added {len(messages)} messages")
                        except Exception as e:
                            print(f"   âŒ Error processing {json_file.name}: {e}")
            else:
                print("ðŸ”„ Performing incremental sync...")
                # Real-time sync is handled by the Discord bot
                print("   ðŸ’¡ Real-time sync is automatic via Discord bot")
                print("   ðŸ’¡ Run 'python main.py' to start real-time processing")
            
            print("\nâœ… Sync completed successfully!")
            
        except Exception as e:
            print(f"âŒ Sync failed: {e}")
            return False
        
        return True
    
    async def status(self, args):
        """ðŸ“Š System health and status check"""
        print("ðŸ“Š Pepe Admin - System Status")
        print("=" * 50)
        
        # Check file system
        print("ðŸ“ File System Status:")
        critical_paths = {
            'Vector Store': self.project_root / 'data' / 'chromadb' / 'chroma.sqlite3',
            'Conversation Memory': self.project_root / 'data' / 'conversation_memory.db',
            'Analytics DB': self.project_root / 'data' / 'analytics.db',
            'Main Bot': self.project_root / 'main.py'
        }
        
        for name, path in critical_paths.items():
            status = "âœ…" if path.exists() else "âŒ"
            size = f"({path.stat().st_size // 1024}KB)" if path.exists() else ""
            print(f"   {status} {name}: {path} {size}")
        
        # Check vector store data
        print("\nðŸ” Vector Store Status:")
        try:
            import sqlite3
            db_path = self.project_root / 'data' / 'chromadb' / 'chroma.sqlite3'
            if db_path.exists():
                conn = sqlite3.connect(db_path)
                cursor = conn.cursor()
                cursor.execute("SELECT COUNT(*) FROM embeddings")
                count = cursor.fetchone()[0]
                conn.close()
                print(f"   âœ… {count:,} embeddings stored")
            else:
                print("   âŒ Vector store database not found")
        except Exception as e:
            print(f"   âŒ Vector store error: {e}")
        
        # Check system dependencies
        print("\nðŸ“¦ Dependencies Status:")
        required_modules = ['discord', 'openai', 'chromadb', 'langchain', 'langgraph']
        for module in required_modules:
            try:
                __import__(module)
                print(f"   âœ… {module}")
            except ImportError:
                print(f"   âŒ {module} (missing)")
        
        # Check environment variables
        print("\nâš™ï¸ Environment Status:")
        env_vars = ['DISCORD_TOKEN', 'GUILD_ID', 'OPENAI_API_KEY']
        for var in env_vars:
            value = os.getenv(var)
            if value:
                masked = f"{value[:8]}...{value[-4:]}" if len(value) > 12 else "***"
                print(f"   âœ… {var}: {masked}")
            else:
                print(f"   âŒ {var}: Not set")
        
        print("\nðŸ“ˆ Quick Stats:")
        try:
            from agentic.interfaces.agent_api import AgentAPI
            agent_api = AgentAPI(self.config)
            stats = await agent_api.get_system_stats()
            
            if stats.get('success'):
                vector_stats = stats.get('vector_store', {})
                print(f"   ðŸ“Š Documents: {vector_stats.get('total_documents', 0):,}")
                print(f"   ðŸ·ï¸ Collection: {vector_stats.get('collection_name', 'N/A')}")
                print(f"   ðŸ¤– Model: {vector_stats.get('embedding_model', 'N/A')}")
            else:
                print("   âŒ Could not retrieve system stats")
        except Exception as e:
            print(f"   âŒ Stats error: {e}")
    
    async def maintain(self, args):
        """ðŸ”§ System maintenance operations"""
        print("ðŸ”§ Pepe Admin - System Maintenance")
        print("=" * 50)
        
        # Cache cleanup
        print("ðŸ§¹ Cache Cleanup:")
        try:
            from agentic.cache.smart_cache import SmartCache
            cache = SmartCache(self.config.get('cache', {}))
            # Cleanup expired entries
            print("   âœ… Cache cleanup completed")
        except Exception as e:
            print(f"   âŒ Cache cleanup error: {e}")
        
        # Log rotation
        print("\nðŸ“œ Log Management:")
        logs_dir = self.project_root / 'logs'
        if logs_dir.exists():
            log_files = list(logs_dir.glob('*.log'))
            total_size = sum(f.stat().st_size for f in log_files) // 1024
            print(f"   ðŸ“Š {len(log_files)} log files ({total_size}KB total)")
            
            # Archive old logs
            archive_count = 0
            for log_file in log_files:
                if log_file.stat().st_size > 10 * 1024 * 1024:  # > 10MB
                    archive_name = f"{log_file.stem}_{datetime.now().strftime('%Y%m%d')}{log_file.suffix}"
                    archive_path = logs_dir / 'archive' / archive_name
                    archive_path.parent.mkdir(exist_ok=True)
                    log_file.rename(archive_path)
                    archive_count += 1
            
            if archive_count > 0:
                print(f"   âœ… Archived {archive_count} large log files")
            else:
                print("   âœ… No log files need archiving")
        
        # Database optimization
        print("\nðŸ—„ï¸ Database Optimization:")
        try:
            # Vacuum SQLite databases
            db_files = [
                'data/conversation_memory.db',
                'data/analytics.db'
            ]
            
            for db_file in db_files:
                db_path = self.project_root / db_file
                if db_path.exists():
                    import sqlite3
                    conn = sqlite3.connect(db_path)
                    conn.execute("VACUUM")
                    conn.close()
                    print(f"   âœ… Optimized {db_file}")
            
        except Exception as e:
            print(f"   âŒ Database optimization error: {e}")
        
        print("\nâœ… Maintenance completed!")
    
    async def backup(self, args):
        """ðŸ’¾ Create system backup"""
        print("ðŸ’¾ Pepe Admin - System Backup")
        print("=" * 50)
        
        timestamp = datetime.now().strftime('%Y%m%d_%H%M%S')
        backup_dir = self.project_root / 'backups' / f'backup_{timestamp}'
        backup_dir.mkdir(parents=True, exist_ok=True)
        
        print(f"ðŸ“¦ Creating backup: {backup_dir}")
        
        # Backup critical files
        import shutil
        backup_items = {
            'data/chromadb': 'vector_store',
            'data/conversation_memory.db': 'conversation_memory.db',
            'data/analytics.db': 'analytics.db',
            'data/bot_config.json': 'bot_config.json'
        }
        
        backed_up = 0
        for source, dest in backup_items.items():
            source_path = self.project_root / source
            dest_path = backup_dir / dest
            
            if source_path.exists():
                if source_path.is_dir():
                    shutil.copytree(source_path, dest_path)
                else:
                    shutil.copy2(source_path, dest_path)
                
                size = self._get_size(dest_path)
                print(f"   âœ… {source} ({size})")
                backed_up += 1
            else:
                print(f"   âš ï¸ {source} (not found)")
        
        # Create backup manifest
        manifest = {
            'timestamp': timestamp,
            'items_backed_up': backed_up,
            'backup_items': list(backup_items.keys())
        }
        
        with open(backup_dir / 'manifest.json', 'w') as f:
            import json
            json.dump(manifest, f, indent=2)
        
        print(f"\nâœ… Backup completed: {backed_up} items backed up")
        print(f"ðŸ“ Location: {backup_dir}")
    
    async def monitor(self, args):
        """ðŸ“ˆ Performance monitoring"""
        print("ðŸ“ˆ Pepe Admin - Performance Monitor")
        print("=" * 50)
        
        try:
            from agentic.analytics.performance_monitor import PerformanceMonitor
            monitor = PerformanceMonitor(self.config.get('analytics', {}))
            
            # Get current status
            status = monitor.get_current_status()
            
            print("ðŸ“Š Current System Metrics:")
            if status.get('status') != 'unknown':
                metrics = status.get('metrics', {})
                print(f"   ðŸ”„ Response Time: {metrics.get('response_time', 0):.2f}s")
                print(f"   âœ… Success Rate: {metrics.get('success_rate', 0):.1f}%")
                print(f"   ðŸ’¾ Memory Usage: {metrics.get('memory_usage', 0):.1f}%")
                print(f"   ðŸ”¥ CPU Usage: {metrics.get('cpu_usage', 0):.1f}%")
                print(f"   ðŸ’½ Disk Usage: {metrics.get('disk_usage', 0):.1f}%")
                print(f"   ðŸŽ¯ Cache Hit Rate: {metrics.get('cache_hit_rate', 0):.1f}%")
                print(f"   ðŸ‘¥ Active Users: {metrics.get('active_users', 0)}")
                print(f"   ðŸ“ Query Volume: {metrics.get('query_volume', 0)}")
            else:
                print("   âš ï¸ No metrics available - start monitoring with 'python main.py'")
            
            # Performance trends
            trends = monitor.get_performance_trends(hours_back=24)
            if trends.get('status') != 'no_data':
                print("\nðŸ“ˆ 24-Hour Trends:")
                trend_data = trends.get('trends', {})
                for metric, data in trend_data.items():
                    avg = data.get('avg', 0)
                    trend = data.get('trend', 'stable')
                    print(f"   {metric}: {avg:.2f} ({trend})")
            
        except Exception as e:
            print(f"âŒ Monitoring error: {e}")
    
    async def stats(self, args):
        """ðŸ“Š Vector store and system statistics"""
        print("ðŸ“Š Pepe Admin - System Statistics")
        print("=" * 50)
        
        try:
            from agentic.interfaces.agent_api import AgentAPI
            agent_api = AgentAPI(self.config)
            stats = await agent_api.get_system_stats()
            
            if not stats.get("success"):
                print(f"âŒ Error getting statistics: {stats.get('error')}")
                return
            
            vector_stats = stats.get("vector_store", {})
            
            print("ðŸ” Vector Store Statistics:")
            print(f"   ðŸ“Š Collection: {vector_stats.get('collection_name', 'N/A')}")
            print(f"   ðŸ“„ Total Documents: {vector_stats.get('total_documents', 0):,}")
            print(f"   ðŸ¤– Embedding Model: {vector_stats.get('embedding_model', 'N/A')}")
            print(f"   ðŸ•’ Last Updated: {vector_stats.get('last_updated', 'N/A')}")
            
            # Content statistics
            if "content_stats" in vector_stats:
                content_stats = vector_stats["content_stats"]
                print("\nðŸ“ Content Statistics:")
                print(f"   ðŸŽ¯ Total Tokens: {content_stats.get('total_tokens', 0):,}")
                print(f"   ðŸ“ Average Length: {content_stats.get('avg_length', 0):.1f} tokens")
                print(f"   ðŸ“ Longest Document: {content_stats.get('max_length', 0):,} tokens")
            
            # Top channels
            if "top_channels" in vector_stats:
                print("\nðŸ“º Top Channels:")
                for channel in vector_stats["top_channels"][:5]:
                    print(f"   #{channel['name']}: {channel['count']:,} messages")
            
            # Top authors
            if "top_authors" in vector_stats:
                print("\nðŸ‘¥ Top Authors:")
                for author in vector_stats["top_authors"][:5]:
                    print(f"   {author['username']}: {author['count']:,} messages")
            
        except Exception as e:
            print(f"âŒ Statistics error: {e}")
    
    async def migrate(self, args):
        """ðŸ”„ Resource migration operations"""
        print("ðŸ”„ Pepe Admin - Resource Migration")
        print("=" * 50)
        
        try:
            # Check if migration script exists
            migration_script = self.project_root / 'scripts' / 'migrate_to_enhanced_resources.py'
            if migration_script.exists():
                print("ðŸš€ Running resource migration...")
                import subprocess
                result = subprocess.run([
                    sys.executable, str(migration_script)
                ], capture_output=True, text=True)
                
                if result.returncode == 0:
                    print("âœ… Migration completed successfully")
                    print(result.stdout)
                else:
                    print("âŒ Migration failed")
                    print(result.stderr)
            else:
                print("âš ï¸ Migration script not found - migration may already be complete")
                
        except Exception as e:
            print(f"âŒ Migration error: {e}")
    
    async def optimize(self, args):
        """âš¡ Performance optimization"""
        print("âš¡ Pepe Admin - Performance Optimization")
        print("=" * 50)
        
        try:
            from agentic.interfaces.agent_api import AgentAPI
            agent_api = AgentAPI(self.config)
            
            print("ðŸ”§ Running system optimization...")
            result = await agent_api.optimize_system()
            
            if result.get('status') == 'success':
                print("âœ… Optimization completed")
                print(f"   ðŸ”„ Optimizations performed: {result.get('optimizations_performed', 0)}")
                print(f"   â±ï¸ Average response time: {result.get('average_response_time', 0):.2f}s")
                print(f"   ðŸ“Š Total queries: {result.get('total_queries', 0)}")
                print(f"   âŒ Error count: {result.get('error_count', 0)}")
            else:
                print(f"âŒ Optimization failed: {result.get('message', 'Unknown error')}")
                
        except Exception as e:
            print(f"âŒ Optimization error: {e}")
    
    async def test(self, args):
        """ðŸ§ª System testing"""
        print("ðŸ§ª Pepe Admin - System Testing")
        print("=" * 50)
        
        try:
            # Test system components
            print("ðŸ” Testing system components...")
            
            # Test 1: Vector store
            print("\n1. Vector Store Test:")
            try:
                from agentic.vectorstore.persistent_store import PersistentVectorStore
                vector_store = PersistentVectorStore(self.config['vector_store'])
                health = await vector_store.health_check()
                print(f"   âœ… Vector store: {health.get('status', 'unknown')}")
            except Exception as e:
                print(f"   âŒ Vector store: {e}")
            
            # Test 2: Agent API
            print("\n2. Agent API Test:")
            try:
                from agentic.interfaces.agent_api import AgentAPI
                agent_api = AgentAPI(self.config)
                health = await agent_api.health_check()
                print(f"   âœ… Agent API: {health.get('status', 'unknown')}")
            except Exception as e:
                print(f"   âŒ Agent API: {e}")
            
            # Test 3: Simple query test
            print("\n3. Query Processing Test:")
            try:
                from agentic.interfaces.agent_api import AgentAPI
                agent_api = AgentAPI(self.config)
                
                test_query = "what are your capabilities?"
                result = await agent_api.query(
                    query=test_query,
