{
  "collection_name": "discord_messages",
  "persist_directory": "./data/chromadb",
  "embedding_model": "text-embedding-3-small",
  "batch_size": 150,
  "max_workers": 3,
  "cache": {
    "type": "hybrid",
    "memory_ttl": 3600,
    "file_ttl": 86400,
    "max_memory_items": 2000,
    "max_file_size_mb": 500
  },
  "connection_pool": {
    "max_connections": 10,
    "keep_alive": true,
    "timeout": 30
  },
  "embedding_cache": {
    "enabled": true,
    "directory": "./data/cache/embeddings",
    "max_size_mb": 1000,
    "compression": true
  }
}